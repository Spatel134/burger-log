<h1>Burgers!</h1>

<h2>Burgers eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger-block devour=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Burgers not eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block devour=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>